<h1 class="signup-title">Registro</h1>
<div class="row register-form-container container">
    <form class="col s12 register-form" action="/api/session/signup" method="post">
        <div class="row">
        <div class="input-field col s6">
            <input type="text" class="validate" name="name">
            <label for="first_name">Nombre</label>
        </div>
        <div class="input-field col s6">
            <input type="text" class="validate" name="lastName">
            <label for="last_name">Apellido</label>
        </div>
        </div>
        <div class="row">
        <div class="input-field col s12">
            <input type="email" class="validate" name="email">
            <label for="disabled">Email</label>
            <span class="helper-text" data-error="Introduce un mail valido" data-success="Formato correcto"></span>
        </div>
        </div>
        <div class="row">
        <div class="input-field col s12">
            <input type="number" class="validate" name="age" min="1" max="100">
            <label for="email">Edad</label>
        </div>
        </div>
        <div class="row">
        <div class="input-field col s12">
            <input type="password" class="validate" name="password">
            <label for="password">Contraseña</label>
        </div>
        </div>
        <input class="waves-effect waves-light btn-small register-submit" type="submit" value="Registrate">
    </form>
</div>
<div style="display: 'flex', justify-content: 'space-around', align-items: 'center'">
    <a href="/api/session/github"><button class="waves-effect waves-light btn-small github-signup">Registrarse con Github</button></a>
    <p>O</p>
    <a href="/login" class="login-anchor">Ya tienes cuenta? Inicia sesión!</a>
</div>
<script src="statics/js/signup.js"></script>